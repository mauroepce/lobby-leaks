# LobbyLeaks Environment Configuration
# Copy this file to .env and fill in your actual values

# ========= Database Configuration =========
# PostgreSQL connection for main database
DATABASE_URL=

# PostgreSQL direct connection (for migrations)
DIRECT_URL=

# Database password
POSTGRES_PASSWORD=

# ========= Service Template Configuration =========

# Required: API key for external service authentication
API_KEY=

# Optional: Logging configuration (defaults shown)
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# Optional: API client configuration
# API_BASE_URL=https://api.example.com
# API_TIMEOUT=30.0
# API_MAX_RETRIES=3

# Optional: Database pool configuration
# DB_POOL_SIZE=5

# Optional: Service metadata
# SERVICE_NAME=lobbyleaks-service
# ENVIRONMENT=development

# Optional: Rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60