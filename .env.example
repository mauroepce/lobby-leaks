# LobbyLeaks Environment Configuration
# Copy this file to .env and fill in your actual values

# ========= Database Configuration =========
# PostgreSQL connection for main database
DATABASE_URL=

# PostgreSQL direct connection (for migrations)
DIRECT_URL=

# Database password
POSTGRES_PASSWORD=

# ========= Service Template Configuration =========

# Required: API key for external service authentication
API_KEY=

# Optional: Logging configuration (defaults shown)
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# Optional: API client configuration
# API_BASE_URL=https://api.example.com
# API_TIMEOUT=30.0
# API_MAX_RETRIES=3

# Optional: Database pool configuration
# DB_POOL_SIZE=5

# Optional: Service metadata
# SERVICE_NAME=lobbyleaks-service
# ENVIRONMENT=development

# Optional: Rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# ========= Lobby Collector Configuration =========

# Feature flag: Enable/disable Lobby API integration
# Set to 'true' only when you have valid API access
ENABLE_LOBBY_API=false

# Required: API key for Ley de Lobby API authentication
# Obtain from https://www.leylobby.gob.cl/admin/perfil
LOBBY_API_KEY=

# Optional: Lobby API configuration
# LOBBY_API_BASE_URL=https://www.leylobby.gob.cl/api/v1
# PAGE_SIZE=100
# DEFAULT_SINCE_DAYS=7

# Optional: HTTP client configuration (overrides template defaults)
# API_TIMEOUT=30.0
# API_MAX_RETRIES=3
# RATE_LIMIT_DELAY=0.5