{
  "name": "lobbyleaks-monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "openapi:lint": "redocly lint --config redocly.yaml docs/openapi.yaml",
    "gen-sdk": "node scripts/gen-sdk.mjs",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset --force --skip-seed"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@openapitools/openapi-generator-cli": "^2.21.2",
    "@prisma/client": "^6.12.0",
    "@redocly/cli": "^1.34.4",
    "eslint": "^9.4.0",
    "globals": "^16.3.0",
    "jest": "^30.0.0",
    "prisma": "^6.12.0"
  }
}
