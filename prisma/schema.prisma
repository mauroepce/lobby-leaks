datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tenant {
  code  String          @id // "CL", "UY", â€¦
  name  String
  users User[]
  docs  Document[]
  funds FundingRecord[]
  leaks Leak[]
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  role       String
  tenantCode String
  tenant     Tenant     @relation(fields: [tenantCode], references: [code])
  documents  Document[]
}

model Document {
  id         String @id @default(uuid())
  url        String
  tenantCode String
  uploaderId String
  uploader   User   @relation(fields: [uploaderId], references: [id])
  tenant     Tenant @relation(fields: [tenantCode], references: [code])
}

model FundingRecord {
  id         String  @id @default(uuid())
  politician String
  amount     Decimal
  source     String
  tenantCode String
  tenant     Tenant  @relation(fields: [tenantCode], references: [code])

  @@index([tenantCode])
}

model Leak {
  id         String @id @default(uuid())
  title      String
  status     String // 'public' | 'draft'
  tenantCode String
  tenant     Tenant @relation(fields: [tenantCode], references: [code])

  @@index([tenantCode])
}

model LobbyEventRaw {
  id          String   @id @default(uuid())
  externalId  String   @unique
  tenantCode  String
  kind        String // 'audiencia' | 'viaje' | 'donativo'
  rawData     Json
  fecha       DateTime?
  monto       Decimal?
  institucion String?
  destino     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tenantCode])
  @@index([externalId])
  @@index([kind, fecha(sort: Desc)])
}
