datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") 
}

generator client {
  provider = "prisma-client-js"
}
model Tenant {
  code   String  @id  // "CL", "UY", â€¦
  name   String
  users  User[]
  docs   Document[]
  funds  FundingRecord[]
}

model User {
  id          String      @id @default(uuid())
  email       String      @unique
  role        String
  tenantCode  String
  tenant      Tenant      @relation(fields: [tenantCode], references: [code])
  documents   Document[]
}

model Document {
  id          String   @id @default(uuid())
  url         String
  tenantCode  String
  uploaderId  String
  uploader    User     @relation(fields: [uploaderId], references: [id])
  tenant      Tenant   @relation(fields: [tenantCode], references: [code])
}

model FundingRecord {
  id          String   @id @default(uuid())
  politician  String
  amount      Decimal
  source      String
  tenantCode  String
  tenant      Tenant   @relation(fields: [tenantCode], references: [code])

  @@index([tenantCode])
}
